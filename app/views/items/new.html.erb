<div class="row">

<div class="col-sm-6 col-sm-offset-3">

  <h1 class="jumbotron text-center">Add a New Item</h1>
<%= form_for @item do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: "form-control", placeholder:"URL with your image" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :inventory %>
      <%= f.text_field :inventory, class: "form-control" %>
    </div>


    <div>
      <div class="form-group">
        <%= f.label :category %>
        <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name"), class: "form-control" %>
      </div>

    </div>



    <%= f.submit "Submit new item", "class" => "btn btn-primary center-block" %>

<% end %>

  <br>


  </div>
</div>