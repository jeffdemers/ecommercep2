<div class="col-sm-10 col-sm-offset-1" xmlns="http://www.w3.org/1999/html">

  <div class="itemshowphoto">
    <img class="img-responsive" <%= src=image_tag(@item.image, :class => 'itemshowphoto')%>
    </div>
    <div class="caption-full">
      <h3 class="pull-right"><%= @item.price%></h3>
      <h3><a href="#"><%= @item.title%></a></h3>

      <h4>Description: <%= @item.description%></h4>

    <div class="ratings">
      <p class="pull-right">3 reviews</p>
      <p>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star-empty"></span>
        4.0 stars
      </p>
    </div>
  </div>
</div>

</div>

<div class="container">

  <hr>

  <footer>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h4><b>Sold by and Ships by:</b>  <%= src=image_tag(@seller.logo,:class => 'logo')%>     <%=@seller.shop_name%>     </h4>
        <br>
        <h4><b>About this Seller:</b> <%= @seller.business_description %></h4>
        <h4><b>Purchase Details:</b> <%= @seller.purchase_desription %></h4>
        <br>
        <h5>Inventory <%= @item.inventory%></h5>




        <% if current_seller == nil%>
            <%else%>
            <% if @item.seller_id == current_seller.id %>

        <%= link_to "Edit Your Item", edit_item_path(@item),"class" => "btn btn-primary" %>
        <%= link_to "Delete Your Item", item_path(@item), method: :delete, "class" => "btn btn-primary" %>
            <% end %>
            <% end %>


      </div>
    </div>
  </footer>

</div>
