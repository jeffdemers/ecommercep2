<h1>Edit Your Item</h1>

<%= form_for @item do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :inventory %>
      <%= f.text_field :inventory, class: "form-control" %>
    </div>


    <div class="form-group">
    <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name"), class: "form-control" %>
    </div>



    <%= f.submit "Edit your item", "class" => "btn btn-primary" %>

<% end %>

<%= link_to "Back to your items", seller_account_path(current_seller.id), "class" => "btn btn-primary" %>


